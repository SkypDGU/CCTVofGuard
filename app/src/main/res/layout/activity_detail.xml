<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/colorMiddleBlue">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDarkBlue"
        android:elevation="10dp">
        <TextView
            android:id="@+id/detail_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자 CCTV"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="left" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detail_Toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@color/colorWhite"
        android:elevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCTV"
            android:textColor="@color/colorDarkGrey"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_outline_grey"
            android:hint="CCTV1"
            android:textColorHint="@color/colorDarkGrey"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/cctv_view_design"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCTV 위치"
            android:textColor="@color/colorDarkGrey"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_outline_grey"
            android:hint="CCTV 위치"
            android:textColorHint="@color/colorDarkGrey"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>